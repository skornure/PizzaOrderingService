@model SearchPizzasViewModel

@{
    var pageName = "Pizzas Menu";
    ViewData["Title"] = pageName;
}


<div class="wrap-filter-btn">
    @await Component.InvokeAsync("CategoryMenu")
    <form asp-controller="Pizzas" asp-action="ListAll">
        <div class="form-horizontal">
            <div class="search-form-wrap form-group">
                <div class="col-md-10">
                    <input asp-for="SearchText" class="search-form" type="text" id="SearchFieldId" oninput="listSearchExamplesScript()" />
                    <span asp-validation-for="SearchText" class="text-danger"></span>
                    <input type="submit" value="Search" class="button" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>
    </form>
</div>

<hr />
<div id="SuggestOutput"></div>
<div id="PizzaSummaryId">
    @foreach (var pizza in Model.PizzaList)
    {
        @Html.Partial("PizzaSummary", pizza)
    }
</div>
<br />

